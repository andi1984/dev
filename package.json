{
  "name": "andi1984-dev",
  "description": "",
  "main": "server.js",
  "engines": {
    "node": "12.x"
  },
  "watch": {
    "build": {
      "patterns": [
        "templates",
        "md"
      ],
      "extensions": "twig,md"
    }
  },
  "scripts": {
    "dev": "npx concurrently \"npx http-server dist\" \"npm run watch-content\" \"npm run watch-assets\"",
    "build": "back2roots",
    "watch-content": "npm-watch",
    "watch-assets-css": "parcel watch assets/css/index.css --public-url /assets/ --out-dir dist/assets --out-file bundle.css",
    "assets-css": "parcel build assets/css/index.css --public-url /assets/ --out-dir dist/assets --out-file bundle.css",
    "watch-assets-js": "parcel watch assets/js/index.js --public-url /assets/ --out-dir dist/assets --out-file bundle.js",
    "assets-js": "parcel build assets/js/index.js --public-url /assets/ --out-dir dist/assets --out-file bundle.js",
    "watch-assets": "concurrently \"npm run watch-assets-css\" \"npm run watch-assets-js\"",
    "assets": "npm run assets-css && npm run assets-js",
    "start": "back2roots -p -c && npm run assets"
  },
  "author": "Andreas Sander <mail@andi1984.de>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@andi1984/back2roots": "^0.6.1",
    "@babel/runtime": "^7.10.3",
    "autoprefixer": "^9.8.6",
    "postcss": "^7.0.32",
    "postcss-import": "^12.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/plugin-transform-runtime": "^7.10.3",
    "autoprefixer": "^9.8.6",
    "babel-preset-env": "^1.7.0",
    "concurrently": "^5.3.0",
    "npm-watch": "^0.6.0",
    "parcel": "^1.12.4",
    "parcel-plugin-static-files-copy": "^2.4.3"
  },
  "staticFiles": {
    "staticPath": "assets/img/faces",
    "watcherGlob": "**"
  }
}
