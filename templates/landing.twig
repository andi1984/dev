{% extends "./base.twig" %}

{% block body %}
<main>
    {{content}}
    <hr/>
    <h2>Landing teaser</h2>
    <ul>
    {% for site in sites %}
        {% if 'posts/' in site.url.pathname %}
        <li><a href="{{site.url}}">{{site.title}}</a></li>
        {% endif %}
    {% endfor %}
    </ul>
</main>
{% endblock %}